<div class="sidebar">
  <ul class="rr-list">
    {{#each model as |band|}}
      <li class="rr-list-item"></li>
      {{#link-to "bands.band.index" band class="rr-band-link"}}
        {{band.name}}
        <span class="pointer">
          {{fa-icon "angle-right"}}
        </span>
      {{/link-to}}
    {{/each}}
  </ul>
  <div class="rr-new-label">
    {{#if isAddingBand}}
      <form class="rr-inline-form" onsubmit={{action "saveBand"}}>
        {{input type="text" class="rr-input" value=newBandName placeholder="New Band"}}
        <button type="submit" class="rr-action-button" disabled={{isAddButtonDisabled}}>{{fa-icon "times"}}</button>
      </form>
    {{else}}
      <label onclick={{action "addBand"}}>
        {{fa-icon "plus"}}
        <span class="ml1">Add new band</span>
      </label>
    {{/if}}
  </div>
</div>  
<div class="main-panel">
  {{outlet}} 
</div>