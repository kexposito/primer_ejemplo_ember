<div class="sidebar">
    <ul class="rr-list">
        {{#each model as |band|}}
            <li class="rr-list-item">
                {{#link-to "bands.band.songs" band class="rr-band-link"}}
                    {{band.name}}
                    <span class="pointer">
                        {{fa-icon "angle-right"}}<!--Provoca error si no instalo el awesome-->
                    </span>
                {{/link-to}}
            </li>
        {{/each}}
    </ul>
    <div class="rr-new-label">
        <label onclick={{action "addBand"}}>
            {{fa-icon "plus"}}
            <span class="ml1">Add new band</span>
        </label>
    </div>
</div>
<div class="main-panel">
    {{outlet}} <!--{ Select band del index -->
</div>