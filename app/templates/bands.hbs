<div class="sidebar">
    <ul class="rr-list">
        {{#each model as |band|}}
            <li class="rr-list-item">
                {{#link-to "bands.band.songs" band class="rr-band-link"}}
                    {{band.name}}
                    <span class="pointer">
                        {{fa-icon "angle-right"}}<!--Provoca error si no instalo el awesome-->
                    </span>
                {{/link-to}}
            </li>
        {{/each}}
    </ul>
    <div class="rr-new-label">
       {{#if isAddingBand}}
            {{input type="text" class="rr-input" value=newBandName placeholder="New Band"}}
            <button type="button" class="rr-action-button" onclick={{action "saveBand"}}>Add</button>
            <span class="rr-cancel-icon" onclick={{cancel "cancelAddButton"}}>{{fa-icon "times"}}</span>
        {{else}}
        <label onclick={{action "addBand"}}>
            {{fa-icon "plus"}}
            <span class="ml1">Add new band</span>
        </label>
        {{/if}}

    </div>
</div>
<div class="main-panel">
    {{outlet}} 
</div>